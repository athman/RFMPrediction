<h1>Listing tasks</h1>

<%= link_to 'Add New Task', new_task_path, class: 'btn btn-lg btn-primary' %>

<ul class="row" id="photos-list">
  <% @tasks.each do |task| %>
    <li class="col-xs-3">
      <%= link_to image_tag(task.dataset.thumb('180x180#').url, alt: task.name, class: 'img-thumbnail'),
                  task.dataset.url, target: '_blank' %>
      <p><%= task.name %></p>
    </li>
  <% end %>
</ul>



<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
